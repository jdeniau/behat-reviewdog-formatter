{
    "name": "jdeniau/behat-reviewdog-formatter",
    "description": "A behat formatter that does output to rdjsonl to be handled by reviewdog",
    "type": "library",
    "require": {
        "behat/behat": "^3"
    },
    "suggest": {
        "friends-of-behat/mink-extension": "To extract data from mink context."
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "friends-of-behat/mink-extension": "^2.7",
        "phpunit/phpunit": "^10.5",
        "php-mock/php-mock-phpunit": "^2.9",
        "mockery/mockery": "^1.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "JDeniau\\BehatReviewdogFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JDeniau\\BehatReviewdogFormatter\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Julien Deniau",
            "email": "julien.deniau@gmail.com"
        }
    ]
}
